<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity" tools:layout_editor_absoluteY="413dp" tools:layout_editor_absoluteX="-112dp">

        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/codeimage"
                android:id="@+id/imageView13"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintDimensionRatio="w,9:16"
                app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView12"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/videosimage"
                android:id="@+id/imageView8"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="w,9:16" app:layout_constraintHorizontal_bias="1.0"
                android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              android:orientation="vertical" app:layout_constraintGuide_percent="0.5"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/inboxbutton"
                android:id="@+id/imageView5"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="52dp" app:layout_constraintTop_toBottomOf="@+id/banner"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="250dp" app:srcCompat="@drawable/devslopesbanner"
                android:id="@+id/banner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:scaleType="centerCrop" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.0"/>
        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp" app:srcCompat="@drawable/devslopesprofilelogo"
                android:id="@+id/logo" android:layout_marginTop="180dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp" android:layout_marginStart="32dp"/>
        <TextView
                android:text="DevSlopes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/devslopesText"
                app:layout_constraintStart_toEndOf="@+id/logo"
                app:layout_constraintTop_toBottomOf="@+id/banner"
                android:layout_marginLeft="44dp" android:layout_marginStart="44dp" android:layout_marginTop="52dp"
                android:textSize="36sp"/>
        <ImageView
                android:layout_width="50dp"

                android:layout_height="50dp" app:srcCompat="@drawable/camerabutton"
                android:id="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/imageView5"
                android:layout_marginLeft="24dp" android:layout_marginRight="24dp"
                app:layout_constraintTop_toTopOf="@+id/imageView5"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"/>
        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp" app:srcCompat="@drawable/favoritebutton"
                android:id="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/devslopesText" app:layout_constraintHorizontal_bias="0.8"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintHorizontal_chainStyle="packed" app:layout_constraintTop_toTopOf="@+id/imageView3"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/dataimage"
                android:id="@+id/imageView2" android:layout_marginTop="44dp"
                app:layout_constraintTop_toBottomOf="@+id/logo" app:layout_constraintEnd_toStartOf="@+id/guideline"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp" android:scaleType="centerCrop"
                app:layout_constraintDimensionRatio="w,9:16"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="0dp" app:srcCompat="@drawable/imagesimage"
                android:id="@+id/imageView12"
                app:layout_constraintTop_toTopOf="@+id/imageView2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp" app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintDimensionRatio="w,9:16"/>
        <Button
                android:text="customize dashboard"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:id="@+id/dashboardButton" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView8"
                style="@style/Widget.AppCompat.Button.Borderless" android:background="#C6512F"
                android:textColor="@android:color/white" android:textSize="18sp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>